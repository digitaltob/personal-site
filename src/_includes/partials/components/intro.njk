<header class="[ intro ] [ pad-top-base pad-bottom-600 sm:pad-top-600 sm:pad-bottom-700 ]">
  <div class="[ inner-wrapper ] [ sf-flow ]">
    <h1 class="[ intro__heading{{ ' intro__heading--compact' if page.url === '/' }} ] [ text-800 sm:text-900 leading-tight ] [ p-name ]">{{ introHeading }}</h1>
    {% if introSummary %}
      <div class="[ intro__summary ] [ sf-flow ] [ leading-mid ]">{{ introSummary | safe }}</div>
    {% endif %}
  </div>
</header>
